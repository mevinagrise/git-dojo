#!/opt/pwn.college/bash

sudo -u hacker bash <<'EOF'

# 创建并初始化 Git 仓库
mkdir -p /tmp/repo
cd /tmp/repo
git init

# 设置用户名和邮箱
git config user.name "pwnuser"
git config user.email "pwn@hust.edu.cn"

echo "Initial content" > readme.md
git add readme.md
git commit -m "Initial commit"

echo "def A(): # TODO" > app.py

# 添加到暂存区，但 **不提交**
git add app.py

# 删除工作区的文件（模拟误删）
rm app.py

EOF
